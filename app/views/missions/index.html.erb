<!-- Makes page refresh every minute -->
<meta http-equiv="refresh" content="60">


<h1 class="text-center">Missions</h1>

<div class="container-fluid">
<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Game</th>
      <th>Location</th>
      <th>Level</th>
      <th>Rescue</th>
      <th>Rescued</th>
      <th>Notes</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @missions.reverse_each do |mission| %>
      <tr class="<%= did(mission.finished)%>" >
        <td><%= mission.game %></td>
        <td><%= mission.location %></td>
        <td><%= mission.level %></td>
        <td><a href="<%= mission.rescue_link %>"><%= check_link(mission.rescue_link) %></a></td>
        <td><a href="<%= mission.rescued_link %>"><%= check_link(mission.rescued_link) %></a></td>
        <td><%= mission.notes %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <!--<td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="text-center">
<form action="<%= new_mission_path %>">
    <input class="btn btn-primary theButton" type="submit" value="Get Help!">
</form>
</div>

